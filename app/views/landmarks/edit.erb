<h1>Edit <%= @landmark.name %></h1>
<form class="" action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="patch" id="hidden">
  <label for="name">Name:</label><br>
  <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>"><br><br>
  <label for="year_completed">Year Completed:</label><br>
  <input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>"><br><br>
  <input type="submit" name="" value="Edit Landmark">
</form>
