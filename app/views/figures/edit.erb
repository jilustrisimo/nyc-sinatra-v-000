<h1>Edit <%= @figure.name %></h1>
<form class="" action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="figure_name">Name</label><br>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br><br>

  <label for="">Titles</label><br>
  <% @titles.each do |title| %>
     <label for=""><%= title.name %></label>
     <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>><br>
   <% end %><br>
  <label for="new_title">Add New Title</label><br>
  <input type="text" id="new_title" name="title[name]"><br></br>

  <% @landmarks.each do |landmark| %>
    <label for=""><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
    <br>
  <% end %><br>

  <label for="new_landmark">New Landmark</label><br>
  <input type="text" name="landmark[name]" id="new_landmark" value=""><br><br>
  <input type="submit" name="" value="Edit Figure">
</form>
